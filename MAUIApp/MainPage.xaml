<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MAUIApp.Controls"
    xmlns:vm="clr-namespace:MAUIApp.ViewModels"
    x:DataType="vm:MainViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <controls:CardStackView
                DislikeCommand="{Binding DislikeCommand}"
                ItemSource="{Binding Items}"
                LikeCommand="{Binding LikeCommand}"
                UpCommand="{Binding UpCommand}">
                <controls:CardStackView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            BackgroundColor="White"
                            HeightRequest="550"
                            Stroke="{AppThemeBinding Light=Blue,
                                                     Dark=White}"
                            StrokeShape="RoundRectangle 50"
                            StrokeThickness="4"
                            WidthRequest="350">
                            <Grid
                                Padding="20"
                                x:DataType="vm:WikiCardViewModel"
                                RowDefinitions="Auto,*">
                                <Label
                                    Grid.Row="0"
                                    FontSize="Large"
                                    Text="{Binding ArticleId}"
                                    TextColor="Black" />
                                <Label
                                    Grid.Row="1"
                                    Text="{Binding Text}"
                                    TextColor="Black" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </controls:CardStackView.ItemTemplate>
            </controls:CardStackView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
